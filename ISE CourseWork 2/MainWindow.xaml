<Window x:Class="ISE_CourseWork_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ISE_CourseWork_2.Views"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="Gray">
            <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Left" Margin="5,0">
                <Button x:Name="BtnHome" Content="Home" MinWidth="70" Click="BtnClickHome"/>
                <TextBox Text="Hallo" Width="200" x:Name="txtRandom"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Right" Margin="5,0">
                <Button x:Name="BtnLogin" Content="Login" MinWidth="70" Click="BtnClickLogin"/>
                <Button x:Name="BtnSignUp" Content="Sign Up" MinWidth="70" Click="BtnClickSignUp"/>
            </StackPanel>
        </DockPanel>
        <Frame x:Name="Main" Grid.Row="2" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
